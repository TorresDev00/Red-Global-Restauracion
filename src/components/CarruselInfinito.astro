---
// Puedes importar las imágenes directamente desde la carpeta public
const ILI = '/LogosAliados/ILI.svg';
const SEMINARIO = '/LogosAliados/Semwesven.svg';
const NOW = '/LogosAliados/VenezuelaNow.svg';
const WESLEY = '/LogosAliados/Wesley.svg';
import { Image } from "astro:assets";

const Icons = [ILI, SEMINARIO, NOW, WESLEY];
---

<div class="w-full inline-flex flex-nowrap justify-center overflow-hidden [mask-image:_linear-gradient(to_right,transparent_0,_black_128px,_black_calc(100%-200px),transparent_100%)] text-3xl21 mt-2">
  {
    [0, 1].map((ul) => (
      <ul class="flex items-center justify-center md:justify-start [&_li]:mx-8 [&_img]:max-w-none animate-scroll whitespace-nowrap">
        {Icons.map((icon, index) => (
          <li class="mx-4">
            <Image src={icon} width={80} height={80} alt={`Icon ${index}`} class="w-56 h-56" />
          </li>
        ))}
        {/* Clonamos los íconos para crear el efecto infinito */}
        {Icons.map((icon, index) => (
          <li class="mx-4">
            <Image src={icon} width={80} height={80} alt={`Icon ${index}`} class="w-56 h-56" />
          </li>
        ))}
      </ul>
    ))
  }
</div>