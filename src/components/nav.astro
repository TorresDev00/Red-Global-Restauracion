---
import ThemeSwitch from "./ThemeSwitch.astro";
---

<!-- Header -->
<header
  class="bg-white dark:bg-transparent shadow-lg transition-colors duration-300"
>
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <!-- Logo -->
    <a href="/" class="text-gray-900 dark:text-white transition-colors">
      <img
        class="h-24 max-sm:h-16"
        alt="Logo Global Restauracion"
        src="../../public/logo.png"
      />
    </a>

    <!-- Links -->
    <nav class="hidden md:flex items-center space-x-12">
      <!-- Agrega items-center -->
      <a
        href="#home"
        class="text-center text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 dark:active:text-blue-600 transition-colors"
        >Inicio</a
      >
      <a
        href="#about"
        class="text-center text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
        >Sobre Nosotros</a
      >
      <a
        href="#services"
        class="text-center text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
        >Coordinaciones</a
      >
      <a
        href="#partners"
        class="text-center text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
        >Aliados</a
      >
      <a
        href="#contact"
        class="text-center text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
        >Contactanos</a
      >
      <ThemeSwitch />
    </nav>

    <!-- Mobile Menu Button -->
    <button
      id="mobileMenuButton"
      class="md:hidden text-gray-600 dark:text-gray-300 focus:outline-none"
    >
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16m-7 6h7"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div
    id="mobileMenu"
    class="md:hidden fixed top-0 left-0 w-full h-full bg-white dark:bg-gray-800 shadow-lg transition-transform transform translate-x-full"
  >
    <div class="flex justify-end p-4">
      <button
        id="mobileMenuClose"
        class="text-gray-600 dark:text-gray-300 focus:outline-none"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    <nav class="flex flex-col items-center mt-8">
      <a
        href="#home"
        class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors py-2 text-lg"
        >Home</a
      >
      <a
        href="#about"
        class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors py-2 text-lg"
        >About</a
      >
      <a
        href="#services"
        class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors py-2 text-lg"
        >Services</a
      >
      <a
        href="#contact"
        class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors py-2 text-lg"
        >Contact</a
      >
      <ThemeSwitch />
    </nav>
  </div>
</header>

<script>
  // Toggle Mobile Menu
  document.getElementById("mobileMenuButton").addEventListener("click", () => {
    const mobileMenu = document.getElementById("mobileMenu");
    mobileMenu.classList.toggle("translate-x-full");
  });

  // Close Mobile Menu
  document.getElementById("mobileMenuClose").addEventListener("click", () => {
    const mobileMenu = document.getElementById("mobileMenu");
    mobileMenu.classList.add("translate-x-full");
  });
</script>
