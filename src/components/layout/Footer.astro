---
import Image from "astro/components/Image.astro";
import logoLight from "../../../public/logoLight.webp";
import logoDark from "../../../public/logo.webp";
---


<footer class="bg-white dark:bg-black pt-4">
    <div class="container mx-auto p-4 md:py-8">
        <div class="flex flex-col items-center sm:flex-row sm:items-center sm:justify-between">
            <!-- Contenedor de logo e íconos -->
            <div class="flex flex-col items-center sm:flex-row sm:space-x-6">
                <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
                    <div class="mb-4">
                        <Image
                            class="w-[150px] sm:w-[200px] dark:hidden"
                            alt="Logo Red Global Restauracion Claro"
                            src={logoLight}
                            loading="lazy"
                        />
                        <Image
                            class="w-[150px] sm:w-[200px] hidden dark:block"
                            alt="Logo Red Global Restauracion Oscuro"
                            src={logoDark}
                            loading="lazy"
                        />
                    </div>
                </a>
                <div class="flex space-x-3 mt-4">
                    <a href="https://www.facebook.com/RedGlobalRestauracion/?locale=es_LA" class="w-10 h-10 inline-flex items-center justify-center border-2 border-black text-black hover:bg-black hover:text-white dark:border-white rounded-full dark:text-white dark:hover:bg-white dark:hover:text-black transition duration-300" aria-label="Visitar Facebook de Red Global Restauración">
                        <!-- Icono Facebook -->
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                            <title>Icono de Facebook</title>
                            <path d="M13.397 20.997v-8.196h2.765l.411-3.209h-3.176V7.548c0-.926.258-1.56 1.587-1.56h1.684V3.127A22.336 22.336 0 0 0 14.201 3c-2.444 0-4.122 1.492-4.122 4.231v2.355H7.332v3.209h2.753v8.202h3.312z"></path>
                        </svg>
                    </a>
                    <a href="https://www.instagram.com/redglobalrestauracionorg?igsh=NnhwcG0zcGE0cTEz" class="w-10 h-10 inline-flex items-center justify-center border-2 border-black text-black hover:bg-black hover:text-white dark:border-white rounded-full dark:text-white dark:hover:bg-white dark:hover:text-black transition duration-300" aria-label="Visitar Instagram de Red Global Restauración">
                        <!-- Icono Instagram -->
                        <title>Icono de Instagram</title>
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M20.947 8.305a6.53 6.53 0 0 0-.419-2.216 4.61 4.61 0 0 0-2.633-2.633 6.606 6.606 0 0 0-2.186-.42c-.962-.043-1.267-.055-3.709-.055s-2.755 0-3.71.055a6.606 6.606 0 0 0-2.185.42 4.607 4.607 0 0 0-2.633 2.633 6.554 6.554 0 0 0-.419 2.185c-.043.963-.056 1.268-.056 3.71s0 2.754.056 3.71c.015.748.156 1.486.419 2.187a4.61 4.61 0 0 0 2.634 2.632 6.584 6.584 0 0 0 2.185.45c.963.043 1.268.056 3.71.056s2.755 0 3.71-.056a6.59 6.59 0 0 0 2.186-.419 4.615 4.615 0 0 0 2.633-2.633c.263-.7.404-1.438.419-2.187.043-.962.056-1.267.056-3.71-.002-2.442-.002-2.752-.058-3.709zm-8.953 8.297c-2.554 0-4.623-2.069-4.623-4.623s2.069-4.623 4.623-4.623a4.623 4.623 0 0 1 0 9.246zm4.807-8.339a1.077 1.077 0 0 1-1.078-1.078 1.077 1.077 0 1 1 2.155 0c0 .596-.482 1.078-1.077 1.078z"></path>
                            <circle cx="11.994" cy="11.979" r="3.003"></circle>
                        </svg>
                    </a>
                    <a href="https://www.youtube.com/channel/UC04m55xeTCYtlXROP8XTWfw" class="w-10 h-10 inline-flex items-center justify-center border-2 border-black text-black hover:bg-black hover:text-white dark:border-white rounded-full dark:text-white dark:hover:bg-white dark:hover:text-black transition duration-300" aria-label="Visitar canal de YouTube de Red Global Restauración" >
                        <!-- Icono Youtube -->
                        <title>Icono de Youtube</title>
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-youtube" viewBox="0 0 16 16">
                            <path d="M8.051 1.999h.089c.822.003 4.987.033 6.11.335a2.01 2.01 0 0 1 1.415 1.42c.101.38.172.883.22 1.402l.01.104.022.26.008.104c.065.914.073 1.77.074 1.957v.075c-.001.194-.01 1.108-.082 2.06l-.008.105-.009.104c-.05.572-.124 1.14-.235 1.558a2.01 2.01 0 0 1-1.415 1.42c-1.16.312-5.569.334-6.18.335h-.142c-.309 0-1.587-.006-2.927-.052l-.17-.006-.087-.004-.171-.007-.171-.007c-1.11-.049-2.167-.128-2.654-.26a2.01 2.01 0 0 1-1.415-1.419c-.111-.417-.185-.986-.235-1.558L.09 9.82l-.008-.104A31 31 0 0 1 0 7.68v-.123c.002-.215.01-.958.064-1.778l.007-.103.003-.052.008-.104.022-.26.01-.104c.048-.519.119-1.023.22-1.402a2.01 2.01 0 0 1 1.415-1.42c.487-.13 1.544-.21 2.654-.26l.17-.007.172-.006.086-.003.171-.007A100 100 0 0 1 7.858 2zM6.4 5.209v4.818l4.157-2.408z"/>
                        </svg>
                    </a>
                </div>
            </div>
            <!-- Enlaces de navegación -->
            <ul class="nav flex flex-wrap justify-center md:flex-row max-sm:flex-col sm:items-center space-y-4 md:space-y-0 md:space-x-6 text-sm font-medium text-gray-500 dark:text-gray-400 mt-3">
                <li class="max-sm:w-auto max-md:w-1/3 md:w-auto md:px-2 text-center"><a href="/" class="block w-full hover:text-blue-700 dark:hover:text-blue-400 transition-colors max-md:pt-4">Inicio</a></li>
                <li class="max-sm:w-auto max-md:w-1/3 md:w-auto md:mt-1 md:px-2 text-center"><a href="/sobreNosotros" class="block w-full hover:text-blue-700 dark:hover:text-blue-400 transition-colors">Sobre Nosotros</a></li>
                <li class="max-sm:w-auto max-md:w-1/3 md:w-auto md:mt-1 md:px-2 text-center"><a href="/aliados" class="block w-full hover:text-blue-700 dark:hover:text-blue-400 transition-colors">Aliados</a></li>
                <li class="max-sm:w-auto max-md:w-1/2 md:w-auto md:mt-1 md:px-2 text-center"><a href="/coordinaciones" class="block w-full hover:text-blue-700 dark:hover:text-blue-400 transition-colors">Coordinaciones</a></li>
                <li class="max-sm:w-auto max-md:w-1/2 md:w-auto md:mt-1 md:px-2 text-center"><a href="/contactos" class="block w-full hover:text-blue-700 dark:hover:text-blue-400 transition-colors">Contáctanos</a></li>
            </ul>
        </div>
        <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
        <span class="block text-sm text-gray-500 text-center dark:text-gray-400">© 2024 Red Global Restauración | Website by TorresDev</span>
    </div>
</footer>

