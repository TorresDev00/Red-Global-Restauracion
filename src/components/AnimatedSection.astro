---
import Loader from "./Loader.astro";
interface Props {
    videoSrc: string;
    imageSrc: string;
}

const { videoSrc, imageSrc } = Astro.props;
---

<section id="animated-section" class="relative overflow-hidden h-[100vh]">
    <!-- Loader visible mientras carga -->
    <div
        id="loader"
        class="fixed inset-0 flex items-center justify-center z-30 bg-black"
    >
        <Loader />
    </div>

    <video
        id="background-video"
        class="fixed top-0 left-0 w-full h-screen object-cover z-1"
        autoplay
        muted
        loop
        preload="auto"
    >
        <source src={videoSrc} type="video/mp4" />
        Tu navegador no soporta videos.
    </video>

    <div
        class="fixed top-0 left-0 w-full h-screen bg-cover bg-center bg-no-repeat z-10"
        style={`background-image: url('${imageSrc}');`}
        id="image1"
    >
    </div>

    <!-- Botón de audio con ícono -->
    <button
        id="toggle-audio"
        class="fixed top-4 right-4 bg-gray-600/25 p-2 rounded-full hover:bg-gray-600/35 transition duration-300 z-30"
    >
        <span id="audio-icon"></span>
    </button>
</section>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    const iconVolumenMute =
        '<svg xmlns="http://www.w3.org/2000/svg" class="fill-white" width="24" height="24" viewBox="0 0 24 24" style="transform: ;msFilter:;"><path d="m7.727 6.313-4.02-4.02-1.414 1.414 18 18 1.414-1.414-2.02-2.02A9.578 9.578 0 0 0 21.999 12c0-4.091-2.472-7.453-5.999-9v2c2.387 1.386 3.999 4.047 3.999 7a8.13 8.13 0 0 1-1.671 4.914l-1.286-1.286C17.644 14.536 18 13.19 18 12c0-1.771-.775-3.9-2-5v7.586l-2-2V2.132L7.727 6.313zM4 17h2.697L14 21.868v-3.747L3.102 7.223A1.995 1.995 0 0 0 2 9v6c0 1.103.897 2 2 2z"></path></svg>';
    const iconVolumen =
        '<svg xmlns="http://www.w3.org/2000/svg" class="fill-white" width="24" height="24" viewBox="0 0 24 24" style="transform: ;msFilter:;"><path d="M16 21c3.527-1.547 5.999-4.909 5.999-9S19.527 4.547 16 3v2c2.387 1.386 3.999 4.047 3.999 7S18.387 17.614 16 19v2z"></path><path d="M16 7v10c1.225-1.1 2-3.229 2-5s-.775-3.9-2-5zM4 17h2.697l5.748 3.832a1.004 1.004 0 0 0 1.027.05A1 1 0 0 0 14 20V4a1 1 0 0 0-1.554-.832L6.697 7H4c-1.103 0-2 .897-2 2v6c0 1.103.897 2 2 2zm0-8h3c.033 0 .061-.016.093-.019a1.027 1.027 0 0 0 .38-.116c.026-.015.057-.017.082-.033L12 5.868v12.264l-4.445-2.964c-.025-.017-.056-.02-.082-.033a.986.986 0 0 0-.382-.116C7.059 15.016 7.032 15 7 15H4V9z"></path></svg>';

    gsap.registerPlugin(ScrollTrigger);

    function showSection() {
        const loader = document.getElementById("loader");
        loader.style.display = "none"; // Ocultar el loader cuando ambos hayan cargado
    }

    function handleMediaLoad() {
        const video = document.getElementById("background-video");
        const image = document.getElementById("image1");

        let mediaLoaded = 0;

        // Verificar si el video está listo
        video.addEventListener("canplaythrough", () => {
            mediaLoaded++;
            if (mediaLoaded === 2) {
                showSection();
            }
        });

        // Verificar si la imagen ha sido cargada
        const img = new Image();
        img.src = image.style.backgroundImage
            .replace('url("', "")
            .replace('")', "");

        img.onload = () => {
            mediaLoaded++;
            if (mediaLoaded === 2) {
                showSection();
            }
        };
    }

    handleMediaLoad();

    // Funcionalidad para activar/desactivar el audio
    const video = document.getElementById("background-video");
    const toggleButton = document.getElementById("toggle-audio");
    const audioIcon = document.getElementById("audio-icon");

    // Inicializar el ícono
    if (audioIcon) {
        audioIcon.innerHTML = iconVolumenMute;
    }

    if (toggleButton && audioIcon) {
        toggleButton.addEventListener("click", () => {
            video.muted = !video.muted;
            audioIcon.innerHTML = video.muted ? iconVolumenMute : iconVolumen;
        });
    }

    // Animaciones con ScrollTrigger
    gsap.fromTo(
        "#image1",
        { scale: 25 }, // La imagen comienza con gran zoom
        {
            scale: 1, // La imagen vuelve a su tamaño normal
            scrollTrigger: {
                trigger: "#animated-section",
                start: "center center",
                end: "+=750vh", // Define el desplazamiento adicional necesario para la animación
                scrub: 1,
                pin: true,
                pinSpacing: true, // Permite que ScrollTrigger maneje el espacio
            },
        },
    );
</script>
